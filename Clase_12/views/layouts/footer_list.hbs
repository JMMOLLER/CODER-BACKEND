{{#if productos}}
    <div id="mensajes" class="container mt-3" style="background-color: rgb(83, 80, 80); border-radius: 30px;">
        <h1 style="text-align: center; margin-top: 2cm; color: black;">Productos añadidos</h1>
        <table class="table" style="margin-top: 1.5cm;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody id="products-container">
            </tbody>
        </table>
    </div>
{{else}}
    <h1><p id="content" class="container mt-3" style="background-color: rgb(83, 80, 80); border-radius: 30px; text-align: center; color: white;">No hay productos que mostrar</p></h1>
{{/if}}